
<%- include ('../partials/header') %>

<div class="column mx-auto mt-5">
    <h3 style="text-align: center;" >Edit Score</h3>
    <div style="mx-auto">
            <form action="/<%= documents._id %>?_method=PUT" method="POST" >
                <div class="form-group">
                    <label for="squat">Squat</label>
                   <input class="form-control" type="number" name = "documents[squat]"  value = "<%= documents.squat %>">
               </div>
                <div class="form-group">
                    <label for="benchPress"> Bench Press </label>
                   <input class="form-control" type="number" name = "documents[benchPress]"  value = "<%= documents.benchPress %>">
               </div>
                <div class="form-group">
                    <label for="deadlift">Deadlift</label>
                   <input class="form-control" type="number" name = "documents[deadlift]" value = "<%=documents.deadlift %>">
               </div>
                   <button class="btn btn-lg btn-secondary btn-block">Submit</button>
               </div>
       </form>
       <a href="/">Go back</a>
</div>

<%- include ('../partials/footer') %>